@model IEnumerable<StudentApplicationMVC.Models.UnitDetails>

@{
    ViewData["Title"] = "HomeScreen";
}

<h1>HomeScreen</h1>
<form method="get">
    <div class="form-group">
        <input name="SearchTerm" class="form-control" placeholder="Search..." id="SearchTerm" />
        <div class=" input-group-append">
            <button type="submit" class="btn btn-primary btn-block">Search</button>
        </div>
    </div>
    <input type="radio" value="Sort by unit title" name="Table" id="Sort by unit title" />
    <label for="Sort">Sort by unit title</label>
    <br/><input type="radio" value="Sort by unit code" name="Table" id="Sort by unit code" />
    <label for="Sort">Sort by unit code</label>
</form>

<table class="table table-dark">
    <thead>
        <tr>
            <th>
               Available units
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    
        <tr>

            <td>
                <a  style="color:white;"    asp-action="GetUnitDetials" asp-route-id="@item.UnitDetailsID">

                    (@Html.DisplayFor(modelItem => item.UnitCode))    @Html.DisplayFor(modelItem => item.UnitTitle)
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
